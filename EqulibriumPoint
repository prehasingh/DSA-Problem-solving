class Solution {
    // Function to find equilibrium point in the array.
    equilibriumPoint(a, n)
    {
        //your code here
       let i,sum=0,lsum=0,rsum=0;
       if(n==1)
       {
           return 1;
       }
       for(i=0;i<n;i++)
       {
           sum =sum+a[i];
       }
       for(i=0;i<n;i++)
       {
           lsum =lsum+a[i];
           rsum = sum -lsum-a[i+1];
           if(lsum==rsum)
           return(i+2)
       }
        return -1;
    }
}
